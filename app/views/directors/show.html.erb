<!-- Simple full-width example-->

<div class="page-header">
  <h1>Director #<%= @director.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Dob</dt>
      <dd><%= @director.dob %></dd>

      <dt>Name</dt>
      <dd><%= @director.name %></dd>

      <dt>Bio</dt>
      <dd><%= @director.bio %></dd>

      <dt>Image url</dt>
      <dd><%= @director.image_url %></dd>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <%= link_to directors_url, :class => "btn btn-primary" do %>
            <i class="fa fa-chevron-left"></i>
          <% end %>
          <%= link_to edit_director_url(@director.id), :class => "btn btn-warning" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to director_url(@director.id), :method => "delete", :data => { :confirm => "Do you really want to delete this director?" }, :class => "btn btn-danger" do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->


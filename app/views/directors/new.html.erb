<!-- Validation failure messages -->

<% if @director.errors.any? %>
  <% @director.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Director</h3>
      </div>
      <div class="panel-body">
        <%= form_for @director, :html => { :class => "form-horizontal" } do |f| %>
          <!-- Label and input for dob -->
          <div class="form-group">
            <%= f.label :dob, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :dob, class: "form-control", placeholder: "Dob"  %>
            </div>
          </div>


          <!-- Label and input for name -->
          <div class="form-group">
            <%= f.label :name, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control", placeholder: "Name"  %>
            </div>
          </div>

          <!-- Label and input for bio -->
          <div class="form-group">
            <%= f.label :bio, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_area :bio, class: "form-control", rows: "3", placeholder: "Bio"  %>
            </div>
          </div>


          <!-- Label and input for image_url -->
          <div class="form-group">
            <%= f.label :image_url, "Image URL", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :image_url, class: "form-control", placeholder: "Image url"  %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit class: "btn btn-success" %>
              or
              <a href="/directors">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

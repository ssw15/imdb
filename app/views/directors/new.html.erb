<!-- Validation failure messages -->

<% if @director.errors.any? %>
  <% @director.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example-->

<div class="page-header">
  <h1>Add Director</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_tag directors_url, :method => "post", :class => "form-horizontal" do %>
      <!-- Label and input for dob -->
      <div class="form-group">
        <label for="dob" class="col-sm-2 control-label">
          Dob
        </label>
        <div class="col-sm-10">
          <input type="text" id="dob" name="dob" placeholder="Dob" class="form-control" value="<%= @director.dob %>">
        </div>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @director.name %>">
        </div>
      </div>

      <!-- Label and input for bio -->
      <div class="form-group">
        <label for="bio" class="col-sm-2 control-label">
          Bio
        </label>
        <div class="col-sm-10">
          <textarea id="bio" name="bio" placeholder="Bio" class="form-control" rows="3"><%= @director.bio %></textarea>
        </div>
      </div>

      <!-- Label and input for image_url -->
      <div class="form-group">
        <label for="image_url" class="col-sm-2 control-label">
          Image url
        </label>
        <div class="col-sm-10">
          <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @director.image_url %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Director" class="btn btn-success">
          or
          <% link_to "Cancel", directors_url %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- End simple full-width example-->


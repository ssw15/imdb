<div class="page-header">
  <h1>
    Actors
    <%= link_to new_actor_url, :class => "btn btn-lg btn-success" do %>
      <i class="fa fa-plus"></i>
    <% end  %>
  </h1>
</div>

<!-- Simple table layout example -->

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Dob</th>
          <th>Name</th>
          <th>Bio</th>
          <th>Image url</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @actors.each do |actor| %>
          <tr>
            <td><%= actor.dob %></td>
            <td><%= actor.name %></td>
            <td><%= actor.bio %></td>
            <td><%= actor.image_url %></td>
            <td>
              <%= link_to actor_url(actor), :class => "btn btn-primary" do %>
                <i class="fa fa-search-plus"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_actor_url(actor), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
            </td>
            <td>
              <%= link_to actor_url(actor), :method => "delete", :data => { :confirm => "Do you really want to delete this actor?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- End simple table layout example -->

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Actors (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @actors.each do |actor| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actor #<%= actor.id %></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Dob</dt>
          <dd><%= actor.dob %></dd>

          <dt>Name</dt>
          <dd><%= actor.name %></dd>

          <dt>Bio</dt>
          <dd><%= actor.bio %></dd>

          <dt>Image url</dt>
          <dd><%= actor.image_url %></dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <%= link_to actor_url(actor), :class => "btn btn-primary" do %>
            <i class="fa fa-search-plus"></i>
          <% end %>
          <%= link_to edit_actor_url(actor), :class => "btn btn-warning" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to actor_url(actor), :method => "delete", :data => { :confirm => "Do you really want to delete this actor?" }, :class => "btn btn-danger" do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container').isotope({
      itemSelector: '.isotope-item',
      layoutMode: 'masonry',
      filter: function() {
        return qsRegex ? $(this).text().match( qsRegex ) : true;
      }
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->

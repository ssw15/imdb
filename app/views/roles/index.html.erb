<div class="page-header">
  <h1>
    Roles
    <%= link_to new_role_url, :class => "btn btn-lg btn-success" do %>
      <i class="fa fa-plus"></i>
    <% end  %>
  </h1>
</div>

<!-- Simple table layout example -->

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Character name</th>
          <th>Movie</th>
          <th>Actor</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @roles.each do |role| %>
          <tr>
            <td><%= role.character_name %></td>
            <td><%= role.movie.title %></td>
            <td><%= role.actor.name %></td>
            <td>
              <%= link_to role_url(role), :class => "btn btn-primary" do %>
                <i class="fa fa-search-plus"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_role_url(role), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
            </td>
            <td>
              <%= link_to role_url(role), :method => "delete", :data => { :confirm => "Do you really want to delete this role?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- End simple table layout example -->

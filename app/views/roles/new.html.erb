<!-- Validation failure messages -->

<% if @role.errors.any? %>
  <% @role.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example-->

<div class="page-header">
  <h1>Add Role</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_tag roles_url, :method => "post", :class => "form-horizontal" do %>
      <!-- Label and input for character_name -->
      <div class="form-group">
        <label for="character_name" class="col-sm-2 control-label">
          Character name
        </label>
        <div class="col-sm-10">
          <input type="text" id="character_name" name="character_name" placeholder="Character name" class="form-control" value="<%= @role.character_name %>">
        </div>
      </div>

      <!-- Label and input for movie_id -->
      <div class="form-group">
        <label for="movie_id" class="col-sm-2 control-label">
          Movie
        </label>
        <div class="col-sm-10">
          <input type="text" id="movie_id" name="movie_id" placeholder="Movie" class="form-control" value="<%= @role.movie_id %>">
        </div>
      </div>

      <!-- Label and input for actor_id -->
      <div class="form-group">
        <label for="actor_id" class="col-sm-2 control-label">
          Actor
        </label>
        <div class="col-sm-10">
          <input type="text" id="actor_id" name="actor_id" placeholder="Actor" class="form-control" value="<%= @role.actor_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Role" class="btn btn-success">
          or
          <% link_to "Cancel", roles_url %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- End simple full-width example-->


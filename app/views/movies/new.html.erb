<!-- Validation failure messages -->

<% if @movie.errors.any? %>
  <% @movie.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Movie</h3>
      </div>
      <div class="panel-body">
        <%= form_for @movie, :html => { :class => "form-horizontal" } do |f| %>
          <!-- Label and input for title -->
          <div class="form-group">
            <%= f.label :title, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
            </div>
          </div>

          <!-- Label and input for year -->
          <div class="form-group">
            <%= f.label :year, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :year, placeholder: "Year", class: "form-control" %>
            </div>
          </div>

          <!-- Label and input for duration -->
          <div class="form-group">
            <%= f.label :duration, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :duration, placeholder: "Duration", class: "form-control" %>
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <%= f.label :description, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_area :description, rows: "3", placeholder: "Description", class: "form-control" %>
            </div>
          </div>

          <!-- Label and input for image_url -->
          <div class="form-group">
            <%= f.label :image_url, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :image_url, placeholder: "Image url", class: "form-control" %>
            </div>
          </div>

          <!-- Label and input for director_id -->
          <div class="form-group">
            <%= f.label :director_id, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :director_id, placeholder: "Director", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit class: "btn btn-success" %>
              or
              <a href="/movies">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
